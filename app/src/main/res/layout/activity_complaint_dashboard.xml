<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background_light">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_portal_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/primary_blue"
        android:padding="16dp"
        android:gravity="center" />

    <!-- Center Info -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/dashboard_subtitle"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/text_primary_dark" />

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:background="@color/bottom_nav_background">

        <Button
            android:id="@+id/btnFileComplaint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/button_orange"
            android:text="@string/dashboard_action_file"
            android:textColor="@color/white" />

        <!-- âœ… CORRECTED: Removed the invalid comment from inside the tag -->
        <Button
            android:id="@+id/btnStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dashboard_action_status"
            android:textColor="@color/white"
            android:backgroundTint="@color/button_green" />

        <Button
            android:id="@+id/btnView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dashboard_action_view"
            android:textColor="@color/white"
            android:backgroundTint="@color/button_blue" />
    </LinearLayout>

</LinearLayout>
