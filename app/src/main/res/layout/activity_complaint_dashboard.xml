<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F8FF">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complaint Portal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#2563EB"
        android:padding="16dp"
        android:gravity="center" />

    <!-- Center Info -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Register and track civic complaints"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#111827" />

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:background="#E5E7EB">

        <Button
            android:id="@+id/btnFileComplaint"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="File Complaint"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F97316"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnStatus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Status"
            android:textColor="#FFFFFF"
            android:backgroundTint="#22C55E"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="View"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3B82F6"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
