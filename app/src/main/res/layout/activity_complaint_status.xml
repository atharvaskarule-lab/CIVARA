<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF2FF"
    android:fillViewport="true"
    android:clipToPadding="false"> <!-- FIX: Allows shadows to show -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:clipToPadding="false"> <!-- FIX: Allows shadows to show -->

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1D4ED8"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complaint Status"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track &amp; manage your complaints"
                android:textColor="#DBEAFE"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- SUMMARY CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"> <!-- Reduced slightly for better rendering -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Complaints:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"/>

            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2563EB"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- STATUS CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Complaint Details"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827"
                android:layout_bottom="8dp"/> <!-- Replaced layout_marginBottom -->

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading status..."
                android:textSize="15sp"
                android:textColor="#374151"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- BUTTONS -->
        <Button
            android:id="@+id/btnViewComplaints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View All Complaints"
            android:backgroundTint="#16A34A"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refresh Status"
            android:backgroundTint="#2563EB"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>
